<h1>Task Details</h1>

<%= link_to "Update task", edit_path%>


<h2><%= @task.title %></h2>
<% if @task.completed %>
        <input type="checkbox" id="completed" name="completed" checked />
      <% else %>
        <input type="checkbox" id="completed" name="completed" />
      <% end %>
<p><%= @task. details %></p>
<p><%= @task.completed %></p>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure to delete Task?"}
%>
<p></p>
<%= link_to "All tasks", tasks_path%>
